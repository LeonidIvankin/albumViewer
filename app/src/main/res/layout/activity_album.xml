<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.LeonidIvankin.albumviewer.view.photoactivity.AlbumActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view_album_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:srcCompat="@drawable/ic_cloud_download_black_48dp"
        android:layout_weight="90"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/text_view_album_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        tools:text="TextView"
        android:layout_gravity="center"
        android:layout_weight="10"/>

</LinearLayout>